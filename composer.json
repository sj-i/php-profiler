{
  "name": "sj-i/php-profiler",
  "description": "a profiler for php",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "php",
    "profiler",
    "ffi"
  ],
  "authors": [
    {
      "name": "sji",
      "homepage": "https://twitter.com/sji_ch"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4|^8.0",
    "ext-ffi": "*",
    "ext-filter": "*",
    "ext-json": "*",
    "ext-pcntl": "*",
    "symfony/console": "^5.0",
    "php-di/php-di": "^6.1",
    "amphp/parallel": "^1.4",
    "amphp/amp": "^2.4"
  },
  "require-dev": {
    "ext-posix": "*",
    "phpunit/phpunit": "^9.0",
    "vimeo/psalm": "^4.7",
    "squizlabs/php_codesniffer": "^3.6",
    "mockery/mockery": "^1.3",
    "psalm/plugin-mockery": "^0.3.0",
    "jetbrains/phpstorm-stubs": "dev-master",
    "php-coveralls/php-coveralls": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "PhpProfiler\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpProfiler\\": "tests"
    }
  },
  "bin": [
    "php-profiler"
  ],
  "scripts": {
    "test": [
      "phpunit"
    ],
    "psalm": [
      "psalm"
    ],
    "phpcs": [
      "phpcs --standard=./phpcs.xml ./src ./tests"
    ]
  }
}
